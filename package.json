{
  "name": "speedster",
  "main": "build/electron.js",
  "version": "2.1.0",
  "description": "aria2 graphical ui, powered by electron, react.",
  "repository": "git@github.com:amovah/speedster.git",
  "author": "Ali Movahedi <ali_movahedi@aol.com>",
  "license": "MIT",
  "scripts": {
    "build:dev": "NODE_ENV=development ./node_modules/.bin/gulp dev",
    "build:prod": "NODE_ENV=production ./node_modules/.bin/gulp prod",
    "start": "NODE_ENV=development ./node_modules/electron/dist/electron .",
    "start:dev": "NODE_ENV=development ./node_modules/electron/dist/electron .",
    "start:prod": "NODE_ENV=production ./node_modules/electron/dist/electron .",
    "build:linux": "./node_modules/.bin/electron-packager ./ speedster --platform=linux --arch=x64 --icon=icons/256x256.png --out=dist --overwrite",
    "build:macos": "./node_modules/.bin/electron-packager ./ speedster --platform=darwin --arch=x64 --icon=icons/256x256.png --out=dist --overwrite",
    "deb": "./node_modules/.bin/electron-installer-debian --config ./packager/deb.json",
    "macos": "./node_modules/.bin/electron-installer-dmg ./dist/speedster-darwin-x64/speedster.app speedster --icon=icons/256x256x.icns --out=dist/installers/ --overwrite",
    "release": "npm run build:linux; npm run deb",
    "prerelease": "npm run build:prod"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "del": "^3.0.0",
    "electron": "^5.0.0",
    "electron-installer-debian": "^1.1.0",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^13.0.1",
    "electron-reload": "^1.4.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.0.1",
    "gulp-eslint": "^5.0.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prop-types": "^15.6.2",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "antd": "^3.13.0",
    "fs-extra": "^7.0.1",
    "humanize-duration": "^3.17.0",
    "moment": "^2.24.0",
    "pretty-bytes": "^5.1.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-form": "^8.2.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "shortid": "^2.2.14",
    "uuid": "^3.3.2"
  }
}
